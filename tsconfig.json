{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler" /* This removes the .js extension requirement */,
    // "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": ["src/**/*" , "generated/**/*"],
  "exclude": ["node_modules", "dist"]
}
